@model nmct.ba.cashlessproject.web.PresentationModels.PMOrganisation

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>


@using (Html.BeginForm("Edit", "Organisation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    var imgSrc = "";
    if (Model.OrganisationNew.Logo != null && Model.OrganisationNew.Logo.Count()!=0)
    {
        var base64 = Convert.ToBase64String(Model.OrganisationNew.Logo );
        imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
    }
    else
    {
        imgSrc = "";
    }
    
    
    <div class="form-horizontal">
        
        @Html.HiddenFor(model=>model.OrganisationNew.ID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationNew.Username, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.OrganisationNew.Username, "", new { @class = "text-danger" })
                @Html.DisplayFor(model => model.OrganisationNew.Username, new { htmlAttributes = new { @class = "form-control" } })         
            </div>
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationNew.Logo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="@imgSrc" />
            </div>
           
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationNew.DbName,new { @class = "control-label col-md-2" })
